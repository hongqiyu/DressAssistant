<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.dressassistant.MySpace">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="明日计划"
                android:textSize="30dp"
                android:id="@+id/ttvv1"
                android:background="#ffffff"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="妆容"
                android:textSize="24dp"
                android:layout_below="@+id/ttvv1"
                android:id="@+id/ttvv2"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/zrfxthree"
                android:layout_below="@+id/ttvv2"
                android:id="@+id/mr1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mr1"
                android:id="@+id/ttvv3"
                android:text="发型"
                android:textSize="24dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/ttvv3"
                android:id="@+id/mr2"
                android:src="@drawable/hbbt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mr2"
                android:id="@+id/ttvv4"
                android:text="套装"
                android:textSize="24dp"/>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@+id/ttvv4"
                android:src="@drawable/hgxh1"
                android:id="@+id/mr3"/>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>