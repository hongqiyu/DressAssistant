<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vieww"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vieww"
                android:layout_centerHorizontal="true"
                android:text="我的历史"
                android:textSize="36dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/textView13"
                android:background="#E8E8E8"
                android:id="@+id/view7" />

            <LinearLayout
                android:id="@+id/LLL1"
                android:layout_below="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/qyt"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="前一天"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    />

                <TextView
                    android:id="@+id/rq"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="true"
                    android:text="2018-12-12"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:id="@+id/hyt"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="后一天"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#FFFFFF"
                android:layout_below="@+id/LLL1"
                android:id="@+id/view8"></View>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view8"
                android:layout_centerHorizontal="true"
                android:text="----------穿搭----------"
                android:textSize="20dp" />

            <View
                android:id="@+id/v"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/textView14"/>

            <View
                android:id="@+id/v2"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/iv3"/>

            <TextView
                android:id="@+id/testView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v2"
                android:layout_centerHorizontal="true"
                android:text="----------发型----------"
                android:textSize="20dp"/>

            <View
                android:id="@+id/v3"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/testView14"/>

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@+id/v3"
                android:layout_centerHorizontal="true"/>

            <View
                android:id="@+id/v4"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/imageView14"/>

            <TextView
                android:id="@+id/testView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/v4"
                android:layout_centerHorizontal="true"
                android:text="----------妆容----------"
                android:textSize="20dp" />

            <View
                android:id="@+id/v5"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_below="@+id/testView15"/>

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@+id/testView15"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_below="@+id/v"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>