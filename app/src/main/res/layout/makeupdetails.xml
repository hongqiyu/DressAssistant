<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.dressassistant.MakeupDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="约会妆"
                android:textSize="30dp"
                android:gravity="center"
                android:id="@+id/tve1"/>
            <VideoView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/tve1"
                android:id="@+id/video"
                android:layout_centerInParent="true"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/video"
                android:id="@+id/ttt1"
                android:text="步骤详解"
                android:textSize="20dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ttt1"
                android:text="1、清洁皮肤\n2、润肤或是爽肤水\n3、上营养面霜\n4、防晒隔离霜\n5、修颜液\n6、打粉底\n7、上粉饼或散粉\n8、画眉\n9、眼影\n10、眼线笔\n11、画唇线\n12、口红\n13、打胭脂\n14、夹睫毛\n15、画睫毛膏"
                android:textColor="#000000"
                />
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>