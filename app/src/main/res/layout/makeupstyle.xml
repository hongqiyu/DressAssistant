<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.dressassistant.MakeupStyle">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <SearchView
        android:id="@+id/SV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="30dp"
        android:gravity="top"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="妆容选择"
            android:layout_below="@+id/SV1"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/tt1"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="风格选择"
                android:textSize="20dp"
                android:layout_below="@+id/tt1"
                android:id="@+id/te3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/te3"
            android:id="@+id/Li1">

            <ImageView
                android:id="@+id/imageButtonA"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
               android:src="@drawable/hqxf"/>

            <ImageView
                android:id="@+id/imageButtonB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
               android:src="@drawable/hyjf"
                />

            <ImageView
                android:id="@+id/imageButtonC"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/homf" />

            <ImageView
                android:id="@+id/imageButtonD"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/hrmf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Li1"
            android:id="@+id/Li2">
            <TextView
                android:id="@+id/textViewA"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="清新风"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/textViewB"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="御姐风"
               />
            <TextView
                android:id="@+id/textViewC"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="欧美风"
                />

            <TextView
                android:id="@+id/textViewD"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="软妹风"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Li2"
            android:id="@+id/Li3">

            <ImageView
                android:id="@+id/imageButtonE"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/hrxz" />

            <ImageView
                android:id="@+id/imageButtonF"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
               android:src="@drawable/hyxz"

                />

            <ImageView
                android:id="@+id/imageButtonG"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/hyhz" />

            <ImageView
                android:id="@+id/imageButtonH"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/hqsf" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Li3"
            android:id="@+id/Li4">
            <TextView
                android:id="@+id/textViewE"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="日系妆"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/textViewF"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="烟熏妆"
                />
            <TextView
                android:id="@+id/textViewG"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="约会妆"
                />

            <TextView
                android:id="@+id/textViewH"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="轻熟妆"
                />
        </LinearLayout>
            <View
                android:layout_height="10px"
                android:layout_width="match_parent"
                android:background="#E8E8E8"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/Li4"
                android:id="@+id/view2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2"
                android:id="@+id/tvvv"
                android:text="妆容部位选择"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvvv"
                android:id="@+id/Li5">
              <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                  android:src="@drawable/hyz"
                  />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/hcz"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/hycz"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Li5"
                android:id="@+id/Li6">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="眼妆"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="唇妆"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="咬唇妆"
                    android:textSize="20dp"
                    android:gravity="center"/>
            </LinearLayout>
            </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/zdbtusy"
            android:text=" " />
        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/zdbanone"
            android:text=" " />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/zdbantwoh"
            android:text=" " />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/zdbanthree"
            android:text=" "
            />
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/zdbanfour"
            android:text=" "
            />
    </LinearLayout>
</RelativeLayout>































